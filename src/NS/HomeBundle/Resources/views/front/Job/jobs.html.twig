                     posted <span> {{ job.date|date('d/m/Y') }} </span>
                     {% endif %} 
						
						</div>
						<div class="date_desc"><h6 class="title"><a href="{{ path('job_view', {'id': job.id}) }}">{{ job.title }}</a></h6>
						  <span class="meta">{{ job.location }}</span>
						</div>
						<div class="clearfix"> </div>
