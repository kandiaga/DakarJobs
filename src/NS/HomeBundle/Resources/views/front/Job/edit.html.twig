{% extends "HomeBundle::layout.html.twig" %}
{% block title "JobsPage" %}
{% block content %}
<div class="container">
    <div class="single">  
	   <div class="form-container">

<h2>Modifier l'offre</h2> 


<form  class="form-horizontal" action="{{ path('job_edit',{'id': job.id}) }}" method="post" {{ form_enctype(form) }}>
    <div class="form-group"> 
    <label class="control-label col-sm-2" >{{ form_label(form.title,'Titre:') }}</label>
	<div class="col-sm-10">
     {{ form_errors(form.title) }}
     {{ form_widget(form.title, { 'attr':{'class': 'form-control' }}) }}	
     </div>
	  </div>
	  
	  
	  <div class="form-group"> 
    <label class="control-label col-sm-2" >Category:</label>
	<div class="col-sm-10">
    <select name="id_category">
       {% for category in categories %}	
	<option value="{{category.id}}">{{category.name}}</option>
      {% endfor %}	
	</select>
     </div>
	  </div>
	  
	  
	  <div class="form-group"> 
    <label class="control-label col-sm-2" >Region:</label>
	<div class="col-sm-10">
    <select name="id_region">
       {% for region in regions %}	
	<option value="{{region.id}}">{{region.name}}</option>
      {% endfor %}	
	</select>
     </div>
	  </div>
	  
	 
	<input type="hidden"  name="id_customer"  value="{{customer_id}}">
	
	<div class="form-group">
	<label class="control-label col-sm-2" > {{ form_label(form.location,'Localité:') }}</label>
	<div class="col-sm-10">
	{{ form_errors(form.location) }}
    {{ form_widget(form.location, { 'attr':{'class': 'form-control' }}) }}	
   </div>
    </div>
   
   <div class="form-group">
    <label class="control-label col-sm-2" >{{ form_label(form.description,'Description:') }}</label>
	<div class="col-sm-10">
    {{ form_errors(form.description) }}
    {{ form_widget(form.description, { 'attr':{'class': 'form-control' }}) }}	
    </div>
   </div>
   
	
	<div class="form-group">
      <label class="control-label col-sm-2" >{{ form_label(form.requirements,'Compétances Requises:') }}</label>
      <div class="col-sm-10">
	    {{ form_errors(form.requirements) }}
        {{ form_widget(form.requirements, { 'attr':{'class': 'form-control'}}) }}	
      </div>
    </div>
	
	
	
	<div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label><input type="checkbox" name="remember"   name="published"  checked="checked">Publié</label>
        </div>
      </div>
    </div>
	
	<div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">       
		{{ form_widget(form.ajouter, { 'attr':{'class': 'btn btn-default'}}) }}
      </div>
    </div>
	
    {{ form_rest(form) }}
    
</form>



 <p>
    <a href="{{ path('job_view', {'id': job.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour a l'annonce
    </a>
  </p>
  
  
  
  
  

<a class="btn btn-blog pull-right marginBottom10" href="{{ path('home_jobspage', {'page': 1}) }}">Back to list</a>

</div>
 </div>
</div>


  

{% endblock %}
